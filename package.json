{
  "name": "flowrag",
  "version": "0.0.0",
  "private": true,
  "description": "ðŸ  Monorepo root containing npm workspace configuration, shared build/test/lint scripts, and all development tooling (Biome, Vitest, Husky). Not published to npm.",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsdown",
    "prelint": "npm run build",
    "lint": "concurrently npm:lint:* --prefixColors auto",
    "lint:format": "biome check --write",
    "lint:package": "npmPkgJsonLint .",
    "lint:lockfile": "lockfile-lint --path package-lock.json --type npm --validate-https --validate-integrity",
    "lint:engines": "ls-engines",
    "lint:typecheck": "tsc --noEmit",
    "postlint": "npm run clean",
    "clean": "rimraf --glob packages/**/dist",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "posttest:coverage": "coverage-badge-readme",
    "prepare": "[ \"$CI\" = \"true\" ] || [ \"$GITHUB_ACTIONS\" = \"true\" ] && echo 'Skipping husky' && exit 0 || husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zweer/FlowRAG.git"
  },
  "keywords": [
    "monorepo",
    "workspace",
    "tooling"
  ],
  "engines": {
    "node": ">= 20"
  },
  "author": {
    "name": "Zweer",
    "email": "n.olivieriachille@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Zweer/FlowRAG/issues"
  },
  "homepage": "https://github.com/Zweer/FlowRAG#readme",
  "devDependencies": {
    "@arethetypeswrong/core": "^0.18.2",
    "@biomejs/biome": "^2.3.10",
    "@semantic-release/changelog": "^6.0.3",
    "@tsconfig/node22": "^22.0.5",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "@zweer/coverage-badge-readme": "^1.2.2",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "lockfile-lint": "^4.14.1",
    "ls-engines": "^0.9.4",
    "npm-package-json-lint": "^9.0.0",
    "npm-package-json-lint-config-default": "^8.0.1",
    "publint": "^0.3.16",
    "rimraf": "^6.1.2",
    "semantic-release": "^25.0.2",
    "tsdown": "^0.18.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
