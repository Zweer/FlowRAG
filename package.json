{
  "name": "flowrag",
  "version": "0.0.1",
  "private": true,
  "description": "ðŸ  Monorepo root containing npm workspace configuration, shared build/test/lint scripts, and all development tooling (Biome, Vitest, Husky). Not published to npm.",
  "keywords": [
    "monorepo",
    "workspace",
    "tooling"
  ],
  "homepage": "https://github.com/Zweer/FlowRAG#readme",
  "bugs": {
    "url": "https://github.com/Zweer/FlowRAG/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zweer/FlowRAG.git"
  },
  "license": "MIT",
  "author": {
    "name": "Zweer",
    "email": "n.olivieriachille@gmail.com"
  },
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsdown",
    "clean": "rimraf --glob packages/**/dist",
    "predocs:build": "tsx scripts/generate-llms-txt.ts",
    "docs:build": "vitepress build docs",
    "docs:dev": "vitepress dev docs",
    "docs:preview": "vitepress preview docs",
    "prelint": "npm run build",
    "lint": "concurrently npm:lint:* --prefixColors auto",
    "postlint": "npm run clean",
    "lint:engines": "ls-engines",
    "lint:format": "biome check --write",
    "lint:lockfile": "lockfile-lint",
    "lint:package": "npmPkgJsonLint .",
    "lint:sort_package": "sort-package-json \"package.json\" \"packages/*/package.json\"",
    "lint:typecheck": "tsc --noEmit",
    "prepare": "[ \"$CI\" = \"true\" ] || [ \"$GITHUB_ACTIONS\" = \"true\" ] && echo 'Skipping husky' && exit 0 || husky",
    "release": "bonvoy shipit",
    "pretest": "npm run build",
    "test": "vitest run",
    "posttest": "npm run clean",
    "pretest:coverage": "npm run build",
    "test:coverage": "vitest run --coverage",
    "posttest:coverage": "npm run clean && coverage-badge-readme",
    "pretest:e2e": "npm run build",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "posttest:e2e": "npm run clean"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@arethetypeswrong/core": "^0.18.2",
    "@biomejs/biome": "^2.3.15",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@tsconfig/node22": "^22.0.5",
    "@types/node": "^25.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "@zweer/coverage-badge-readme": "^1.2.2",
    "bonvoy": "^0.13.0",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "lockfile-lint": "^5.0.0",
    "ls-engines": "^0.10.0",
    "npm-package-json-lint": "^9.1.0",
    "npm-package-json-lint-config-default": "^8.0.1",
    "publint": "^0.3.17",
    "rimraf": "^6.1.2",
    "sort-package-json": "^3.6.1",
    "tsdown": "^0.20.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitepress": "^1.6.4",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">= 20.17"
  },
  "lockfile-lint": {
    "path": "package-lock.json",
    "type": "npm",
    "validate-https": true,
    "allowed-hosts": [
      "npm"
    ]
  }
}
